<h1>
    Posts:
</h1>
<table>
    <thead>
    <tr>
        <th>
            Body
        </th>
        <th>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td>
                        <%= link_to  post.body, post  %>
                </td>
                <td>
                    <%= link_to  "Edit", edit_post_path(post)  %>
                </td>
                <td>
                    <%= link_to  "Delete", post, method: :delete, data: { confirm: 'Are you sure?' }   %>
                </td>
            </tr>
        <% end %>

    </tbody>
    
</table>
<% if can_create_post? %>
    <h2>Add Post!</h2>
    <%= link_to 'New Post', new_post_path %>
<% end %>
